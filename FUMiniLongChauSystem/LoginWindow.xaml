<Window x:Class="FUMiniLongChauSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Mini Long Chau" Height="500" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Background="#F9F9F9">
        <Border Padding="20" Background="White" CornerRadius="10" Margin="20" 
        VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" Width="250">
                <!-- Logo -->
                <Image Source="pack://application:,,,/Assets/logo.png" Width="80" Height="80" Margin="0,0,0,10"/>

                <!-- App title -->
                <TextBlock Text="Mini Long Chau" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#2E86C1"
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email" Margin="0,0,0,5"/>
                <TextBox Name="EmailTextBox" Margin="0,0,0,10" Padding="5"/>

                <!-- Password -->
                <TextBlock Text="Password" Margin="0,0,0,5"/>
                <PasswordBox Name="PasswordBox" Margin="0,0,0,20" Padding="5"/>

                <!-- Buttons -->
                <Button Content="Login" Click="LoginButton_Click" Height="35" Background="#2E86C1" Foreground="White"/>
                <Button Content="Register" Click="RegisterButton_Click" Height="35" Background="#EAECEE" Foreground="Black" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
