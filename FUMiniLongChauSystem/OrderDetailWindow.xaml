<Window x:Class="FUMiniLongChauSystem.OrderDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết đơn hàng"
        Width="720"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        FontFamily="Segoe UI"
        SizeToContent="Height">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="12"
                          ShadowDepth="0"
                          Opacity="0.25"
                          Color="Black"/>
    </Window.Resources>

    <Border Background="White"
            CornerRadius="10"
            Padding="20"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Effect="{StaticResource DropShadowEffect}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- List -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="📦" FontSize="20" Margin="0,0,5,0"/>
                <TextBlock Text="Chi tiết đơn hàng"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>
            </StackPanel>

            <!-- Danh sách -->
            <ListView Name="OrderDetailListView" Grid.Row="1">
                <ListView.Resources>
                    <Style TargetType="GridViewColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="4,6"/>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Sản phẩm" Width="240" DisplayMemberBinding="{Binding ProductId}" />
                        <GridViewColumn Header="Số lượng" Width="100" DisplayMemberBinding="{Binding Quantity}" />
                        <GridViewColumn Header="Đơn giá" Width="130">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N0} đ}"
                                               HorizontalAlignment="Right"
                                               Foreground="#34495E"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Thành tiền" Width="140">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} đ}"
                                               HorizontalAlignment="Right"
                                               FontWeight="Bold"
                                               Foreground="DarkGreen"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Đóng"
                        Width="100"
                        Height="32"
                        Background="#3498DB"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
