<Window x:Class="FUMiniLongChauSystem.CustomerHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Long Châu - Trang chính" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F6F9"
        FontFamily="Segoe UI">

    <DockPanel>
        <!-- HEADER -->
        <Border Background="#2E86C1" Height="60" DockPanel.Dock="Top">
            <Grid Margin="20,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tên ứng dụng -->
                <TextBlock Text="Mini Long Châu"
                   Grid.Column="0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center" />

                <!-- Khu vực chứa các nút -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <!-- Nút Thông tin tài khoản -->
                    <Button Content="👤 Thông tin"
            Width="130"
            Height="36"
            Padding="8,4"
            Background="White"
            Foreground="#2E86C1"
            FontWeight="SemiBold"
            Cursor="Hand"
            BorderBrush="#ffffff"
            BorderThickness="1"
            Margin="10,0,0,0"
            Click="AccountButton_Click"/>

                    <!-- Nút Giỏ hàng -->
                    <Button Content="🛒 Giỏ hàng"
            Width="130"
            Height="36"
            Padding="8,4"
            Background="White"
            Foreground="#2E86C1"
            FontWeight="SemiBold"
            Cursor="Hand"
            BorderBrush="#ffffff"
            BorderThickness="1"
            Margin="10,0,0,0"
            Click="CartButton_Click"/>

                    <Button Content="📄 Đơn hàng"
                        Width="130"
                        Height="36"
                        Padding="8,4"
                        Background="White"
                        Foreground="#2E86C1"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderBrush="#ffffff"
                        BorderThickness="1"
                        Margin="10,0,0,0"
                        Click="ViewOrdersButton_Click"/>

                    <!-- Nút Đăng xuất -->
                    <Button Content="🚪 Đăng xuất"
            Width="130"
            Height="36"
            Padding="8,4"
            Background="White"
            Foreground="#C0392B"
            FontWeight="SemiBold"
            Cursor="Hand"
            BorderBrush="#ffffff"
            BorderThickness="1"
            Margin="10,0,0,0"
            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>


        <!-- MAIN CONTENT -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CATEGORIES -->
            <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Danh mục" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Foreground="#2E86C1"/>
                    <ListBox Name="CategoryListBox" SelectionChanged="CategoryListBox_SelectionChanged"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#333"
                             FontSize="14">
                        <!-- "Tất cả" được thêm từ code-behind -->
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- PRODUCT AREA -->
            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <!-- Search bar -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox Name="SearchTextBox"
                         Width="600"
                         Height="32"
                         FontSize="14"
                         Padding="8,4"
                         VerticalAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"
                         ToolTip="Nhập tên thuốc để tìm kiếm..."
                         />
                </StackPanel>


                <!-- Sorting -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Sắp xếp:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox Width="160" Height="32" Name="SortComboBox" SelectionChanged="SortComboBox_SelectionChanged">
                        <ComboBoxItem Content="Bán chạy" IsSelected="True"/>
                        <ComboBoxItem Content="Giá giảm dần"/>
                        <ComboBoxItem Content="Giá tăng dần"/>
                    </ComboBox>
                </StackPanel>

                <!-- Product List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Name="ProductWrapPanel" ItemWidth="240" ItemHeight="Auto" Margin="0,0,0,20" />
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
